<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  <Id>{3C4B2F1E-9B2A-4F9D-ABCD-1234567890AB}</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>YourCompany</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName>Route & Rate Calculator</DisplayName>
  <Description>Show map and calculate rate per mile.</Description>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.3">
      <Set Name="Mailbox" MinVersion="1.3" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://jashan11101.github.io/RouteAddin/index.html" />
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

  <Action xsi:type="ShowTaskpane">
    <SourceLocation resid="TaskPane.Url" />
    <Title resid="TaskPane.Title" />
  </Action>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
                    xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel" />
                <Control xsi:type="Button" id="showMapBtn">
                  <Label resid="buttonLabel" />
                  <Supertip>
                    <Title resid="buttonLabel" />
                    <Description resid="buttonDesc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskPane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://jashan11101.github.io/RouteAddin/icon16.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="TaskPane.Url" DefaultValue="https://jashan11101.github.io/RouteAddin/index.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Route Tools"/>
        <bt:String id="buttonLabel" DefaultValue="Show Map"/>
        <bt:String id="TaskPane.Title" DefaultValue="Route & Rate"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="buttonDesc" DefaultValue="Display map and calculate total rate"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
